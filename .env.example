# =============================================================================
# Monte Carlo Reliability Analysis Configuration
# Copy this file to .env and customize for your specific analysis
# =============================================================================

# =============================================================================
# SIMULATION PARAMETERS
# =============================================================================
N_SIMULATIONS=10000
RANDOM_SEED=42
CONFIDENCE_LEVEL=95

# =============================================================================
# CURRENT SYSTEM - FAILURE RATES (FIT - Failures In Time per billion hours)
# =============================================================================
CURRENT_CPU_FIT=50e-9
CURRENT_HDD_FIT=0
CURRENT_SSD_FIT=150e-9
CURRENT_RAM_FIT=100e-9

# =============================================================================
# UPGRADED SYSTEM - FAILURE RATES (FIT)
# =============================================================================
UPGRADED_CPU_FIT=30e-9
UPGRADED_SSD_ENTERPRISE_FIT=50e-9
UPGRADED_RAM_FIT=80e-9

# =============================================================================
# CURRENT SYSTEM CONFIGURATION
# =============================================================================
CURRENT_CPU_COUNT=14
CURRENT_HDD_COUNT=0
CURRENT_SSD_COUNT=24
CURRENT_RAM_COUNT=32

# =============================================================================
# UPGRADED SYSTEM CONFIGURATION
# =============================================================================
UPGRADED_CPU_COUNT=14
UPGRADED_HDD_COUNT=0
UPGRADED_SSD_COUNT=42
UPGRADED_RAM_COUNT=56

# =============================================================================
# VISUALIZATION SETTINGS
# =============================================================================
PLOT_STYLE=seaborn-v0_8
FIGURE_SIZE_WIDTH=15
FIGURE_SIZE_HEIGHT=12
PLOT_DPI=300
OUTPUT_FILENAME=reliability_analysis.png

# =============================================================================
# ANALYSIS PARAMETERS
# =============================================================================
FAILURE_TIME_THRESHOLD_HOURS=24
PERCENTILE_LOWER=2.5
PERCENTILE_UPPER=97.5

# =============================================================================
# ORGANIZATION SETTINGS (Optional)
# =============================================================================
ORGANIZATION_NAME=Your Organization
SYSTEM_NAME=IT Infrastructure
ANALYST_NAME=System Analyst